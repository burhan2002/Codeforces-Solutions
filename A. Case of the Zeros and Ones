#include <bits/stdc++.h>
using namespace std;

#define endl "\n"
#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);

int main() {
    fast_io();

    int n;
    cin>>n;
    string s;
    cin>>s;

    int z=0,o=0;

    int l=s.size();

    for(int i=0;i<l;i++)
    {
        if(s[i]=='0')
            z++;
        else o++;
    }

    int Min = min(z,o);

    cout<<l-2*Min<<endl;


    return 0;
}
