#include <bits/stdc++.h>
using namespace std;

#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);

int main() {
    fast_io();

    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        int a = 0, b = 0, c = 0;
        for (char ch : s) {
            if (ch == 'A') a++;
            else if (ch == 'B') b++;
            else if (ch == 'C') c++;
        }
        if (b == a + c) cout << "YES\n";
        else cout << "NO\n";
    }
    return 0;
}
