#include <bits/stdc++.h>
using namespace std;

#define endl "\n"
#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);

int main()
{
    fast_io();

    int t;
    cin>>t;
    while(t--)
    {
        int p;
        cin>>p;
        vector<int> v(p);
        for(int i=0; i<p; i++)
            cin>>v[i];
        if(!is_sorted(v.begin(),v.end()))
            cout<<0<<endl;
        else
        {
            int k=INT_MAX;
            for(int i=0; i<p-1; i++)
                k=min(k,v[i+1]-v[i]);
            int ans = (k%2==0 ? (k+2)/2 : (k/2 + 1));
            cout<<max(1,ans)<<endl;
        }
    }
    return 0;
}
