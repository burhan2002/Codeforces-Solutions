// https://codeforces.com/problemset/problem/1520/A

#include <bits/stdc++.h>
using namespace std;

#define endl "\n"
#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);

int main() {
    fast_io();

    int t;
    cin >> t;
    while(t--) {
        int p;
        cin >> p;
        string s;
        cin >> s;

        set<char> seen;
        bool suspicious = false;

        for(int i = 0; i < p; i++) {
            if(seen.count(s[i]) && s[i] != s[i-1]) {
                suspicious = true;
                break;
            }
            seen.insert(s[i]);
        }

        cout << (suspicious ? "NO" : "YES") << endl;
    }

    return 0;
}
