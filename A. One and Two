#include <bits/stdc++.h>
using namespace std;

#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);

int main() {
    fast_io();
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        int total_twos = 0;
        for (int i = 0; i < n; i++) {
            cin >> a[i];
            if (a[i] == 2) total_twos++;
        }

        int left_twos = 0;
        int k = -1;
        for (int i = 0; i < n - 1; i++) {
            if (a[i] == 2) left_twos++;
            if (left_twos == total_twos - left_twos) {
                k = i + 1;
                break;
            }
        }
        cout << k << endl;
    }
    return 0;
}
