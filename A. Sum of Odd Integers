#include <bits/stdc++.h>
using namespace std;

#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);

int main() {
    fast_io();

    int t;
    cin >> t;
    while (t--) {
        long long n, k;
        cin >> n >> k;
        if (n >= k*k && n % 2 == k % 2) cout << "YES\n";
        else cout << "NO\n";
    }

    return 0;
}
