#include <bits/stdc++.h>
using namespace std;

#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);

int main() {
    fast_io();

    int t;
    cin >> t;
    while (t--) {
        int a, b, c;
        cin >> a >> b >> c;
        int time1 = abs(a - 1);
        int time2 = abs(b - c) + abs(c - 1);

        if (time1 < time2) cout << 1 << "\n";
        else if (time2 < time1) cout << 2 << "\n";
        else cout << 3 << "\n";
    }

    return 0;
}
