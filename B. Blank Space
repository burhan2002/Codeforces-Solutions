#include <bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef vector<int> vi;
typedef pair<int, int> pii;
typedef set<int>si;

#define pb push_back
#define endl "\n"
#define fast_io() ios::sync_with_stdio(false); cin.tie(nullptr);
const double PI =acos(-1);

int main()
{
    fast_io();


    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        int arr[n];
        int c=0,p=0;
        for(int i=0; i<n; i++)
            cin>>arr[i];
        for(int i=0; i<n; i++)
        {
            if(arr[i]==0)
            {
                p++;
            }
            if(p>c)
                c=p;
            if(arr[i]==1)
            {
                p=0;
            }
        }
        cout<<c<<endl;
    }

    return 0;
}
